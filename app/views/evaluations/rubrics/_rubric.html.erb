<article class="media">
  <div class="media-content">
    <div class="content">
      <p class="title is-4"><%= link_to 'Rubric', rubric %></p>
      <p class="subtitle is-6">
        Max Score: <%= rubric.max_score %>
      </p>
      <p>
        <ul>
          <% rubric.rubric_items.each do |item| %>
          <li><%= item.name%></li>
          <% end %>
        </ul>
      </p>
    </div>
  </div>
</article>
