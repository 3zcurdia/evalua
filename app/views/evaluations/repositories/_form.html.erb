<%= form_with(model: repository_evaluation, local: true) do |form| %>
  <% if repository_evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(repository_evaluation.errors.count, "error") %> prohibited this repository_evaluation from being saved:</h2>

      <ul>
        <% repository_evaluation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: 'label' %>
    <%= form.text_field :name, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :rubric_id, class: 'label' %>
    <div class="select">
      <%= form.collection_select :rubric_id, Rubric.all, :id, :name, prompt: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :closed_on, class: 'label' %>
    <%= form.date_select :closed_on, start_year: Date.current.year, default: 7.days.from_now %>
  </div>

  <div class="control">
    <%= form.submit class: 'button is-primary' %>
  </div>
<% end %>
