<% content_for(:breadcrumbs) do %>
<li class="is-active">
  <%= link_to 'Rubrics', rubrics_path %>
</li>
<li>
  <%= link_to 'Add Rubric', new_rubric_path %>
</li>
<% end %>

<h1 class='title'>Rubrics</h1>
<table class='table is-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Items</th>
      <th>Max Score</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rubrics.each do |rubric| %>
      <tr>
        <td><%= rubric.name %></td>
        <td><%= rubric.items_count %></td>
        <td><%= rubric.max_score %></td>
        <td>
          <%= link_to 'Show', rubric %> |
          <%= link_to 'Edit', edit_rubric_path(rubric) %> |
          <%= link_to 'Destroy', rubric, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
