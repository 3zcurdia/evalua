<% content_for(:breadcrumbs) do %>
<li>
  <%= link_to 'Rubrics', rubrics_path %>
</li>
<li class="is-active">
  <%= link_to @rubric.name, @rubric %>
</li>
<li>
  <%= link_to 'Add Item', new_rubric_item_path(@rubric) %>
</li>
<% end %>

<h1 class="title"><%= @rubric.name %></h1>
<hr>
<p class="subtitle is-6">
  <%= link_to 'Edit', edit_rubric_path(@rubric) %> |
  <%= link_to "Destroy", @rubric, method: :delete, data: { confirm: 'Are you sure?' } %> |
  Updated at <%= l @rubric.updated_at.to_date, format: :long %>
</p>
<hr>

<% @rubric.rubric_items.each do |item| %>
<p class="title is-5"><%= item.name %></p>
<p class="subtitle is-6">
  <%= link_to 'Edit', edit_rubric_item_path(@rubric, item) %> |
  <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<div class="columns">
  <% item.item_categories.each do |category| %>
  <div class="column">
    <div class="card">
      <div class="card-content">
        <p class="title is-4"><%= category.name %></p>
        <p class="subtitle is-6"><%= category.weight %> points</p>
        <div class="content">
          <p><%= category.summary %></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
